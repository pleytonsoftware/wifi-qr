{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@cn": ["./src/utils/cn.ts"],
			"@app-types/*": ["./src/types/*"],
			"@atoms/*": ["./src/components/ui/atoms/*"],
			"@molecules/*": ["./src/components/ui/molecules/*"],
			"@organism/*": ["./src/components/ui/organism/*"],
			"@pages/*": ["./src/components/ui/pages/*"],
			"@hooks/*": ["./src/components/hooks/*"],
			"@contexts/*": ["./src/components/contexts/*"],
			"@providers/*": ["./src/components/providers/*"],
			"@layout/*": ["./src/components/layout/*"],
			"@store/*": ["./src/store/*"],
			"@assets/*": ["./src/assets/*"],
			"@navigation": ["./src/i18n/navigation.ts"],
			"@locales/*": ["./locales/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
